using System;

class Program
{
    static void Main()
    {
        string[] fruits = new string[5];
        int appleCount = 0;

        for (int i = 0; i < fruits.Length; i++)
        {
            Console.Write($"Enter favorite fruit #{i + 1}: ");
            fruits[i] = Console.ReadLine().ToLower(); // store in lowercase

            if (fruits[i] == "apple")
            {
                appleCount++;
            }
        }

        Console.WriteLine("\nYour favorite fruits are:");
        foreach (string fruit in fruits)
        {
            Console.WriteLine(fruit);
        }

        Console.WriteLine($"\n 'apple' was entered {appleCount} time(s).");
    }
}
